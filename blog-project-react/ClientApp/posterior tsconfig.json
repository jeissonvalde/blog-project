{
  "compilerOptions": {
    "target": "es2016",
    "lib": [ "DOM", "DOM.Iterable", "ESNext" ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "jsx": "react-jsx",
    "outDir": "dist",
    "moduleResolution": "Node"
  },
  "include": [ "src" ],
  "references": [ { "path": "./tsconfig.node.json" } ]
}